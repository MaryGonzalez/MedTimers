@*EDIT USER ACCOUNT*@

@model MedTimers.Models.Users

@{
    ViewData["Title"] = "MedTimers";
    Layout = "";
}
<link rel="shortcut icon" href="~/Images/clock.PNG" />
<link rel="stylesheet" href="~/css/StyleSheet.css"/>
@if (ViewBag.userType == "1")
{


    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!--JQUERY-->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

        @*BOOTSTRAP*@
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>

        @*Modal*@
        @*<script src="https://unpkg.com/popper.js"></script>*@
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/2.9.2/umd/popper.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-beta/js/bootstrap.min.js"></script>
        <link href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.0.0-beta.2/css/bootstrap.css" />

        <!--Password Validation-->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css" />

        @*Add new patient icon*@
        <link href="https://netdna.bootstrapcdn.com/font-awesome/3.1.1/css/font-awesome.min.css" rel="stylesheet">

        @*Fonts*@
        <script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>      

        <link rel="stylesheet" href="~/css/Accounts.css">

        <script src="~/js/Account.js"></script>


        <style>
        .updatePasswordBtn {
            height: 34px;
            background-color: white;
            color: black;
            padding: 5px;
            text-align: center;
            text-decoration: none;
            border: 1px solid #ccc;
            display: inline-block;
            width: 95%;
            margin-bottom: 3%;
            margin-top: 3%;
            margin-left: 18px;
        }

          .editCancel:hover {
            background-color: white;
            color: black;
        }

        .editSubmit:hover {
            color: white;
            background-color: #212529;
        }

        </style>

    </head>


    <body>
        <div class="row headTitleEdit">
            <div class="col-sm-12 titlebox" style="background-color:#43444D; ">
                @*Application title*@
                <p class="medTitle">MedTimers</p>
            </div>
        </div>

        <div class="col-4 newPatient">
            <div class="container-fluid editAcct">
                <div class="col-md-4" style="margin-bottom:20px">

                    @*Edit user account. Send to EditAccount in HomeController*@
                    <form asp-controller="Home" asp-action="EditAccount" id="EditAccount" autocomplete="off" style="margin-top: 33px;">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <button type="button" class="info-btn btn btn-primary defaultPasswordEdit" data-bs-toggle="tooltip" data-bs-placement="right" title="Default Password: Zc!p2h@T">?</button>
                        
                        <h4 class="userTitle">Edit User</h4>
                        <hr>

                        <input type="hidden" asp-for="UserID" />

                        @*User First Name*@
                        <div class="row mb-3">
                            <label asp-for="User_FirstName" class="col-sm-4 col-form-label">First Name</label>
                            <div class="col-sm-8">
                                <input asp-for="User_FirstName" type="text" class="form-control" id="inputFirst">
                            </div>
                        </div>

                        @*User Last Name*@
                        <div class="row mb-3">
                            <label asp-for="User_LastName" class="col-sm-4 col-form-label">Last Name</label>
                            <div class="col-sm-8">
                                <input asp-for="User_LastName" type="text" class="form-control" id="inputLast">
                            </div>
                        </div>

                        @*User Email*@
                        <div class="row mb-3">
                            <label asp-for="User_Email" class="col-sm-4 col-form-label">Email</label>
                            <div class="col-sm-8">
                                <input asp-for="User_Email" type="email" class="form-control" id="inputEmail2">
                            </div>
                        </div>

                        @*User username*@
                        <div class="row mb-3">
                            <label asp-for="Username" class="col-sm-4 col-form-label">Username</label>
                            <div class="col-sm-8">
                                <input asp-for="Username" type="text" class="form-control" id="inputUsername">
                            </div>
                        </div>

                        @*User account type*@
                        <div class="row mb-3">
                            <label asp-for="UserTypeID" class="col-sm-4 col-form-label">Account Type</label>
                            <div class="col-sm-8 acctType" >
                                <select asp-for="UserTypeID" class="form-select">
                                    <option selected>Select</option>
                                    <option value="1">Administrator</option>
                                    <option value="2">Nurse</option>
                                    <option value="3">Assessor</option>
                                    <option value="4">Sub Administrator</option>
                                    <option value="5">Front Desk</option>
                                </select>
                            </div>
                        </div>
                                                                                            
                         <!--Update User Password Button-->
                         @*Send user to UpdatePassword page*@                      
                         @*<button type="button" class="button button-small editCertBtn password" onclick="passwordAlert();  @("window.location.href='" + @Url.Action("ResetPassword", "Home", new{UserID = Model.UserID}) + "'");">Reset Password</button>*@
                          <button type="button" class="updatePasswordBtn" onclick="passwordAlert();  @("window.location.href='" + @Url.Action("ResetPassword", "Home", new{UserID = Model.UserID}) + "'");">Reset Password</button>

                            <div class="form-group editAcctBtn">
                                <input type="submit" value="Save" class="btn btn-dark cancelBtn editSubmit" style="width: 100px; padding: 10px;" />
                                <a asp-action="Accounts" class="btn btn-outline-dark cancelBtn editCancel" style="width: 100px; padding: 10px; border-color: black; margin-top:20px">Cancel</a>
                            </div>

                    </form>     
                    <div class="row mb-12">
                        <div class="acctBtnsEdit">                          
                        </div>
                    </div>
                 </div>
            </div>
        </div>
    </body>
</html>

<script>
    @*Password Reset Alert*@
    function passwordAlert(){
    alert("Password has been updated to default password: Zc!p2h@T")
    }
</script>

}

@*If user does not have access to this page, display error message*@
else
{
<div style="margin-left:44%; margin-top:8%">

  <div class='error-circle'>
    <div style="font-family: sans-serif;">X</div>
  </div>

  <h3 style="text-align:center; font-size:29px; margin-left:-84%; font-family: sans-serif;">Access Denied</h3>
  <p style="text-align:center; margin-left: -83%; font-size: 19px; font-family: sans-serif;">You do not have permission to view this page.</p>
  <p style="text-align:center; margin-left: -83%; font-size: 19px; font-family: sans-serif;">Please check your credentials and try again</p>
  <br>
  <a style="text-align:center; margin-left: 4%; font-size: 19px; font-family: sans-serif;" href="https://medtimers.cphmo.net/home/login">Login</a>
</div>
}
