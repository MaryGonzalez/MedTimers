                            {
                                <input readonly asp-for="Track_FaxReceived" type="datetime" style="border:none; text-align:right" class="form-control" />
                                @*<input readonly class="form-control" asp-for="Track_FaxReceived"  asp-format="{0:yyyy-MM-ddTHH:mm}"/>*@
