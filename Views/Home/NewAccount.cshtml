@*ADD NEW USER ACCOUNT FORM*@


@model MedTimers.Models.Users
<link rel="stylesheet" href="~/css/StyleSheet.css"/>
@{
    ViewData["Title"] = "MedTimers";
    Layout = "";
}
<link rel="shortcut icon" href="~/Images/clock.PNG" />

@*User access based on account type  1:Administrator*@
@if (ViewBag.userType == "1")
{
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <!--JQUERY-->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

        <!--BOOTSTRAP-->
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"></script>

        <!-- Add new patient icon -->
        <link href="https://netdna.bootstrapcdn.com/font-awesome/3.1.1/css/font-awesome.min.css" rel="stylesheet">

        <!--Fonts-->
        <script src="https://kit.fontawesome.com/a076d05399.js"></script>

        <!--Password Validation-->
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/js/bootstrap.min.js"></script>
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css" />

        <script src="~/js/Account.js"></script>

         <link rel="stylesheet" href="~/css/Accounts.css">        

    </head>


    <body>

        <div class="row headTitle">
            <div class="col-sm-12 titlebox" style="background-color:#43444D; ">
                <p class="medTitle">MedTimers</p>
            </div>
        </div>
        
       
        <div class="col-4">
            <div class="container-fluid addAcct">
                <div class="container-fluid newAccount">
                <div class="col-md-12">
                    @*Add New User Account Form*@
                    @*Send to NewAccount in HomeController*@
                    <form asp-action="NewAccount" id="AddAccount" class="row g-3">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                       
                        @*Tool tip to display default password*@
                         <button type="button" class="info-btn btn btn-primary defaultPasswordNew" data-bs-toggle="tooltip" data-bs-placement="right" title="Default Password: Zc!p2h@T">?</button>
                        
                         @*Page title*@
                        <h4 class="userTitleNew">
                            New User
                        </h4>
                        <hr class="hrNew">
                        <p class="requiredFieldAcct">*required field</p>

                        @*User First Name*@
                        <div class="col-md-6">
                            <label asp-for="User_FirstName" class="form-label">First Name*</label>
                            <input asp-for="User_FirstName" type="text" class="form-control" id="inputFirst">
                            <span asp-validation-for="User_FirstName" class="text-danger"></span>
                        </div>

                        @*User Last Name*@
                        <div class="col-md-6">
                            <label asp-for="User_LastName" class="form-label">Last Name*</label>
                            <input asp-for="User_LastName" type="text" class="form-control" id="inputLast">
                            <span asp-validation-for="User_LastName" class="text-danger"></span>
                        </div>

                        @*User Email*@
                        <div class="col-md-4">
                            <label asp-for="User_Email" class="form-label">Email*</label>
                            <input asp-for="User_Email" type="email" class="form-control" id="inputEmail">
                            <span asp-validation-for="User_Email" class="text-danger"></span>
                        </div>

                        @*User Username*@
                        <div class="col-md-4">
                            <label asp-for="Username" class="form-label">Username*</label>
                            <input asp-for="Username" type="text" class="form-control" id="inputUsername">
                            <span asp-validation-for="Username" class="text-danger"></span>
                        </div>

                        @*User Account Type*@
                        <div class="col-md-4">
                            <label asp-for="UserTypeID" class="form-label">Account Type*</label>
                            <select asp-for="UserTypeID" id="inputAccountType" class="form-select">
                                <option selected>Select</option>
                                    <option value="1">Administrator</option>
                                    <option value="2">Nurse</option>
                                    <option value="3">Assessor</option>
                                    <option value="4">Sub Administrator</option>
                                    <option value="5">Front Desk</option>
                            </select>
                            <span asp-validation-for="UserTypeID" class="text-danger"></span>
                        </div>

                        <div class="acctBtns">
                            <input type="submit" value="Submit" class="submitNewAcct" />
                            <a asp-action="Accounts" class="btn btn-outline-dark CancelNewAcct" style="margin-top: -11%;">Cancel</a>
                        </div>

                    </form>   
                </div>
            </div>
        </div>
    </body>
</html>
}

@*If user does not have access to this page, display error message*@
else
{
     <div style="margin-left:44%; margin-top:8%">

      <div class='error-circle'>
        <div style="font-family: sans-serif;">X</div>
      </div>

      <h3 style="text-align:center; font-size:29px; margin-left:-84%; font-family: sans-serif;">Access Denied</h3>
      <p style="text-align:center; margin-left: -83%; font-size: 19px; font-family: sans-serif;">You do not have permission to view this page.</p>
      <p style="text-align:center; margin-left: -83%; font-size: 19px; font-family: sans-serif;">Please check your credentials and try again</p>
    </div>
}
